<AnchorPane prefHeight="750.0" prefWidth="1180.0" style="-fx-background-color: #004E98;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegistrarManutencaoController">
    <children>
        <ImageView fitHeight="37.0" fitWidth="200.0" layoutX="80.0" layoutY="80.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@imagens/logomarca.png" />
            </image>
        </ImageView>
        <Text fill="WHITE" layoutX="425.0" layoutY="105.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Registrar Manutenção">
            <font>
                <Font name="Montserrat Bold" size="28.0" />
            </font>
        </Text>

        <Button fx:id="botaoSair" layoutX="1020.0" layoutY="71.0" mnemonicParsing="false" onAction="#handleSair" style="-fx-background-color: #FF6700; -fx-background-radius: 42px; -fx-cursor: hand;" text="Sair" textFill="WHITE">
            <padding>
                <Insets bottom="16.0" left="24.0" right="24.0" top="16.0" />
            </padding>
            <font>
                <Font name="Montserrat Bold" size="16.0" />
            </font>
        </Button>

        <AnchorPane layoutX="80.0" layoutY="176.0" prefHeight="550.0" prefWidth="1020.0" style="-fx-background-color: #F2F2F2; -fx-background-radius: 42px;">
            <children>

                <GridPane layoutX="100.0" layoutY="50.0" prefHeight="130.0" prefWidth="820.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="33.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="33.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="34.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                    </rowConstraints>

                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Veículo" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <font>
                            <Font name="Montserrat Bold" size="15.0" />
                        </font>
                    </Text>
                    <TextField fx:id="inputVeiculo" promptText="Placa ou ID do Veículo" prefHeight="48.0" styleClass="inputArea" stylesheets="@CSS/inputs.css" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <font>
                            <Font name="Montserrat Regular" size="14.0" />
                        </font>
                    </TextField>

                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tipo de Manutenção" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <font>
                            <Font name="Montserrat Bold" size="15.0" />
                        </font>
                    </Text>
                    <TextField fx:id="inputTipoManutencao" promptText="Ex: Troca de óleo, Pneu, etc" prefHeight="48.0" styleClass="inputArea" stylesheets="@CSS/inputs.css" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <font>
                            <Font name="Montserrat Regular" size="14.0" />
                        </font>
                    </TextField>

                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Data" GridPane.columnIndex="2" GridPane.rowIndex="0">
                        <font>
                            <Font name="Montserrat Bold" size="15.0" />
                        </font>
                    </Text>
                    <DatePicker fx:id="inputData" prefHeight="48.0" prefWidth="250.0" styleClass="inputArea" stylesheets="@CSS/inputs.css" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                </GridPane>

                <Text layoutX="100.0" layoutY="210.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Descrição">
                    <font>
                        <Font name="Montserrat Bold" size="15.0" />
                    </font>
                </Text>
                <TextArea fx:id="inputDescricao" layoutX="100.0" layoutY="220.0" prefHeight="130.0" prefWidth="820.0" promptText="Detalhes da manutenção realizada" styleClass="inputArea" stylesheets="@CSS/inputs.css">
                    <font>
                        <Font name="Montserrat Regular" size="14.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </TextArea>

                <Text layoutX="100.0" layoutY="385.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Custo (R$)">
                    <font>
                        <Font name="Montserrat Bold" size="15.0" />
                    </font>
                </Text>
                <TextField fx:id="inputCusto" layoutX="100.0" layoutY="395.0" prefHeight="48.0" prefWidth="250.0" promptText="0.00" styleClass="inputArea" stylesheets="@CSS/inputs.css">
                    <font>
                        <Font name="Montserrat Regular" size="14.0" />
                    </font>
                </TextField>

                <Button fx:id="botaoVoltar" alignment="CENTER" layoutX="100.0" layoutY="450.0" mnemonicParsing="false" onAction="#handleVoltar" styleClass="botaoVoltar" stylesheets="@CSS/botoes.css" text="Voltar" textAlignment="CENTER" textFill="#004e98">
                    <padding>
                        <Insets bottom="16.0" left="24.0" right="24.0" top="16.0" />
                    </padding>
                    <font>
                        <Font name="Montserrat Bold" size="16.0" />
                    </font>
                    <effect>
                        <DropShadow blurType="GAUSSIAN" offsetX="1.0" offsetY="2.0">
                            <color>
                                <Color red="0.7529411911964417" green="0.7529411911964417" blue="0.7529411911964417" />
                            </color>
                        </DropShadow>
                    </effect>
                </Button>

                <Button fx:id="botaoRegistrarManutencao" layoutX="790.0" layoutY="450.0" mnemonicParsing="false" onAction="#handleRegistrarManutencao" style="-fx-background-color: #004E98; -fx-background-radius: 42px; -fx-cursor: hand;" text="Registrar" textFill="WHITE">
                    <font>
                        <Font name="Montserrat Bold" size="16.0" />
                    </font>
                    <padding>
                        <Insets bottom="16.0" left="24.0" right="24.0" top="16.0" />
                    </padding>
                </Button>

            </children>
        </AnchorPane>
    </children>
</AnchorPane>