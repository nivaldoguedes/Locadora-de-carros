<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.DatePicker?>
<AnchorPane prefHeight="750.0" prefWidth="1180.0" style="-fx-background-color: #004E98;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.GerarRelatorioController">

    <children>

        <AnchorPane layoutX="80.0" layoutY="176.0" prefHeight="494.0" prefWidth="1020.0"
                    style="-fx-background-color: #F2F2F2; -fx-background-radius: 42px;">
            <children>

                <Button fx:id="botaoVoltar" alignment="CENTER" layoutX="100.0" layoutY="398.0"
                        mnemonicParsing="false" onAction="#clickBotaoVoltar"
                        styleClass="botaoVoltar" stylesheets="@CSS/botoes.css"
                        text="Voltar" textAlignment="CENTER" textFill="#004e98">

                    <padding><Insets bottom="16.0" left="24.0" right="24.0" top="16.0"/></padding>
                    <font><Font name="Montserrat Bold" size="16.0"/></font>

                    <effect>
                        <DropShadow blurType="GAUSSIAN" offsetX="1.0" offsetY="2.0">
                            <color><Color red="0.75" green="0.75" blue="0.75"/></color>
                        </DropShadow>
                    </effect>

                </Button>

                <Button fx:id="botaoGerar" layoutX="813.0" layoutY="398.0"
                        mnemonicParsing="false" onAction="#clickBotaoGerarRelatorio"
                        style="-fx-background-color: #004E98; -fx-background-radius: 42px; -fx-cursor: hand;"
                        text="Gerar" textFill="WHITE">

                    <font><Font name="Montserrat Bold" size="16.0"/></font>
                    <padding><Insets bottom="16.0" left="24.0" right="24.0" top="16.0"/></padding>

                </Button>

                <Text layoutX="562.0" layoutY="229.0">
                    <font><Font name="Montserrat Regular" size="14.0"/></font>
                </Text>

                <!--
                     AQUI FOI FEITA A CORREÇÃO:
                     comboRelatorio  →  inputOpcaoDeRelatorio
                 -->
                <ComboBox fx:id="inputOpcaoDeRelatorio" layoutX="100.0" layoutY="78.0"
                          prefHeight="48.0" prefWidth="380.0"
                          promptText="Selecione o tipo de relatório"
                          styleClass="inputArea" stylesheets="@CSS/inputs.css">

                    <items>
                        <FXCollections fx:factory="observableArrayList"/>
                    </items>

                    <padding><Insets left="24"/></padding>

                </ComboBox>

                <Text layoutX="114.0" layoutY="67.0" text="Qual relatório deseja gerar?">
                    <font><Font size="16.0"/></font>
                </Text>

                <Label fx:id="aviso"
                       layoutX="100"
                       layoutY="350"
                       textFill="red">
                    <font><Font name="Montserrat Regular" size="14.0"/></font>
                </Label>

                <Text layoutX="114.0" layoutY="150.0" text="Data inicial:">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Text>

                <DatePicker fx:id="dataInicio"
                            layoutX="100.0"
                            layoutY="160.0"
                            prefWidth="200.0" />

                <Text layoutX="114.0" layoutY="230.0" text="Data final:">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Text>

                <DatePicker fx:id="dataFim"
                            layoutX="100.0"
                            layoutY="240.0"
                            prefWidth="200.0" />


            </children>
        </AnchorPane>

        <ImageView fitHeight="37.0" fitWidth="200.0" layoutX="80.0" layoutY="80.0"
                   preserveRatio="true">
            <image><Image url="@imagens/logomarca.png"/></image>
        </ImageView>

        <Text fill="WHITE" layoutX="491.0" layoutY="127.0" text="Gerar relatórios">
            <font><Font name="Montserrat Bold" size="28.0"/></font>
        </Text>

        <Button fx:id="botaoSair" layoutX="1020.0" layoutY="71.0"
                mnemonicParsing="false" onAction="#clickBotaoSair"
                style="-fx-background-color: #FF6700; -fx-background-radius: 42px; -fx-cursor: hand;"
                text="Sair" textFill="WHITE">

            <padding><Insets bottom="16.0" left="24.0" right="24.0" top="16.0"/></padding>
            <font><Font name="Montserrat Bold" size="16.0"/></font>

        </Button>

    </children>

</AnchorPane>
